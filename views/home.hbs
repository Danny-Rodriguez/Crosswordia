<div class="toolbelt">
  <div class="dropdown">
    <button class="dropbtn dropdown-toggle">Crossword Puzzle Size</button>
    <div class="dropdown-content">
      <a href="#">5x5</a>
      <a href="#">10x10</a>
      <a href="#">15x15</a>
    </div>
  </div>

  {{! <button id="clickMode" class="button-50" role="button">Add a Box</button> }}
  {{! <button id="hintBtn" class="button-43">Finish and Create Hints</button> }}

</div>

<div class="solveArea wrap1000">
  <div class="container">

    <div class="wrapper">
      <div id="thesaurus" class="thesaurusI" style="display: none">
        <h1 class="text-center">Online Thesaurus</h1>
        <form id="word-form">
          <label for="word">Input a Word</label>
          <input id="word" type="text" />
          <button id="dictSubmit">Search</button>
        </form>
        <ul id="listDict"></ul>
      </div>
      <div class="grid" id="crossGrid"></div>
      <div id="boxAndFinish" style="display: none">
        <button id="clickMode" class="button-50" role="button" style="width: 11.94em;">Add a Box</button>
        {{! <button id="hintBtn" class="button-43" style="margin: 0 auto;">Finish and Create Hints</button> }}
        <button id="hintBtn" class="button-50-b box" role="button" style="margin-top: 0.5em;">Finish and Create Hints</button>
      </div>
    </div>
  </div>

  <div id="hints" class="hintsCreate">
    <div id="hints-input-across"><h3 id="h3-across" class="text-center"></h3></div>
    <div id="hints-input-down"><h3 id="h3-down" class="text-center"></h3></div>
    <button id="hintSubmit" class="button-82-pushable" role="button" style="display:none">
      <span class="button-82-shadow"></span>
      <span class="button-82-edge"></span>
      <span class="button-82-front text">
        Submit
      </span>
    </button>
  </div>

</div>
<div id="hintsHidden" style="display: none"></div>

<script src="/scripts/create.js" type="module"></script>
<link rel="stylesheet" href="/css/create.css" />