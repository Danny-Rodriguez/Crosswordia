<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
     <title id="titlePage">{{title}}</title>
    <style type="text/css">.viewArea{z-index: 1;}</style>
     {{!-- a[href="/about"]{ color: inherit !important; } --}}
    <link rel="preload" href="/img/crossword.svg" as="image" />
    {{!-- <link rel="preload" href="/img/crossword-thinking.svg" as="image" /> --}}
    <link rel="shortcut icon" href="/img/crossword.svg" type="image/svg+xml" media="(prefers-color-scheme: light)" />
    <link rel="shortcut icon" href="/img/crossword-darkmode.svg" type="image/svg+xml" media="(prefers-color-scheme: dark)" />
    <link rel="mask-icon" href="/img/crossword.svg" color="black" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.8.3/font/bootstrap-icons.css" />
    <link rel="stylesheet" type="text/css" href="/css/create.css" />
    <link rel="stylesheet" href="/css/floatingSquares.css" />
    <link rel="stylesheet" type="text/css" href="/css/colored-theme.min.css" />
    <script src="/scripts/growl-notification.min.js" type="module"></script>
  </head>
  <body id="bodyId" class="area">
    <nav class="navbar navbar-light bg-light justify-content-between py-2 fixed-top">
      <a href="/" class="navbar-brand">Welcome to Crosswordia!</a>

      <div class="navbar-links">
        <a id="gallery" href="/gallery" class="nav-link justify-content-between box-shadow" role="button"><div>Gallery</div>
          <img class="smallIcons" src="/img/crossword.svg" alt="Gallery" />
        </a>
        <div class="dropdown">
          <a class="profile-drop nav-link dropdown-toggle justify-content-between box-shadow" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
            <div>My Dashboard</div>
            <img src="{{image}}" alt="avatar" referrerpolicy="no-referrer" class="smallIcons rounded-circle" />
          </a>
          <div class="dropdown-content">
            <a href="/user" class="dropdown-item d-inline-flex align-items-center" role="button"><div>My Crosswords</div>
              <img src="/img/myCrosswords-b.svg" class="crossword-b" alt="My Crosswords"/>
            </a>
            <a href="/auth/logout" class="dropdown-item">Logout <i class="bi bi-box-arrow-right"></i></a>
          </div>
        </div>
      </div>

    </nav>

    <section class="viewArea flex-grow-1 mt-5">

        {{{body}}}

    </section>

